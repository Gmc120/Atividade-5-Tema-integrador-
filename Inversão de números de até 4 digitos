#include <stdio.h>

int main(void) {

  int num, m, c, d, u, reverso, continua;

  do {
    printf("digite um numero de quatro digitos maior que zero: ");
    scanf("%d", &num);
    if (num >= 1000 && num <= 9999) {
      m = num / 1000;
      c = (num / 100) % 10;
      d = (num / 10) % 10;
      u = num % 10;
      reverso = (u * 1000) + (d * 100) + (c * 10) + m;
      printf("%d \n", reverso);

    } else if (num >= 100 && num <= 999) {
      c = num / 100;
      d = (num / 10) % 10;
      u = num % 10;
      reverso = u * 100 + d * 10 + c;
      printf("%d \n", reverso);

    } else if (num >= 10 && num <= 99) {
      d = num / 10;
      u = num % 10;
      reverso = u * 10 + d;
      printf("%d \n", reverso);
    } else {
      printf("numero invalido \n");
    }

    printf("voce deseja continuar? 1 para sim e 2 para nao: \n");
    scanf("%d", &continua);
  } while (continua == 1);

  return 0;
}
